<!DOCTYPE html>
<html lang="en">

    <%- include ('layouts/header'); -%>

    <body>
        <%- include ('layouts/navbar'); -%>
        <%- include ('layouts/hero'); -%>
        <div class="container mt-5">
            <form action="/submit-g2" method="post">
                <div class="card">
                    <!-- personal information section header -->
                    <div class="card-header">
                        Personal Information
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <input type="text" class="form-control" id="firstName" name="firstName"
                            value="<%= typeof formData !== 'undefined' ? formData.firstName : '' %>">
                            <% if (typeof errors !== 'undefined') { %>
                            <small class="text-danger"><%= errors.firstName %></small>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="lastName">Last Name:</label>
                            <input type="text" class="form-control" id="lastName" name="lastName"
                            value="<%= typeof formData !== 'undefined' ? formData.lastName : '' %>">
                            <% if (typeof errors !== 'undefined') { %>
                            <small class="text-danger"><%= errors.lastName %></small>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="age">Age:</label>
                            <input type="number" class="form-control" id="age" name="age"
                            value="<%= typeof formData !== 'undefined' ? formData.age : '' %>">
                            <% if (typeof errors !== 'undefined') { %>
                            <small class="text-danger"><%= errors.age %></small>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="licenseNumber">License Number (8 characters-alphanumeric):</label>
                            <input type="text" class="form-control" id="licenseNumber" name="licenseNumber"
                            value="<%= typeof formData !== 'undefined' ? formData.licenseNumber : '' %>">
                            <% if (typeof errors !== 'undefined') { %>
                            <small class="text-danger"><%= errors.licenseNumber %></small>
                            <% } %>
                        </div>
                    </div>

                    <!-- car information section header -->
                    <div class="card-header">
                        Car Information
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="make">Make:</label>
                            <input type="text" class="form-control" id="make" name="make"
                            value="<%= typeof formData !== 'undefined' ? formData.make : '' %>">
                            <% if (typeof errors !== 'undefined') { %>
                            <small class="text-danger"><%= errors.make %></small>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="model">Model:</label>
                            <input type="text" class="form-control" id="model" name="model"
                            value="<%= typeof formData !== 'undefined' ? formData.model : '' %>">
                            <% if (typeof errors !== 'undefined') { %>
                            <small class="text-danger"><%= errors.model %></small>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="year">Year:</label>
                            <input type="number" class="form-control" id="year" name="year"
                            value="<%= typeof formData !== 'undefined' ? formData.year : '' %>">
                            <% if (typeof errors !== 'undefined') { %>
                            <small class="text-danger"><%= errors.year %></small>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="plateNumber">Plate Number:</label>
                            <input type="text" class="form-control" id="plateNumber" name="plateNumber"
                            value="<%= typeof formData !== 'undefined' ? formData.plateNumber : '' %>">
                            <% if (typeof errors !== 'undefined') { %>
                            <small class="text-danger"><%= errors.plateNumber %></small>
                            <% } %>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Submit Request</button>
            </form>
        </div>

        <%- include ('layouts/scripts'); -%>
    </body>

</html>
